@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager
@model IEnumerable<Conference>
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (User.IsInRole("FacultyAdmin"))
{<div class="row">

        <a class="btn btn-primary col-md-2 offset-10 " asp-area=""  asp-controller="Conferences" asp-action="ConferencePage">Додати конференцію</a>
           
    </div>
}
    <div class="row">
        @foreach (var i in Model)
        {

            <div class="item col-md-4  align-items-center justify-content-center text-center " style="padding:20px 0; ">
                <a asp-route-id="@i.Id" asp-route-userId="@UserManager.GetUserId(User)" asp-controller="Conferences" asp-action="Details"><img src="@i.ImgPath" alt="" class="conference-img"></a>
                <h5>@i.Title</h5>
                <p>@i.Date.ToShortDateString().Split(' ')[0]</p>

            </div>
        }
    </div>