@{
}
@model IEnumerable<Conference>

<div class="row">
@foreach (var i in Model)
{
    
    <div class="item col-md-4  align-items-center justify-content-center text-center " style="padding:20px 0; ">
        <a asp-route-id="@i.Id" asp-controller="Conferences" asp-action="Details"><img src="@i.ImgPath" alt="" class="conference-img"></a>
        <h5>@i.Title</h5>
        <p>@i.Date.ToShortDateString().Split(' ')[0]</p>
        
    </div>
}
</div>